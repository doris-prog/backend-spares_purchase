  {{!-- Quotation detailed information with product ID and Customer ID --}}
<div style="display: flex; align-items: center; justify-content: left;">
    <h1 style="margin-right: 10px;">Quotation Detailed Information</h1>
    <a href="/quotation/create" class="btn btn-primary btn-sm">Create New Quote</a>
  </div>
  <table class="table">
    <thead>
      <tr>
        <th>Quote ID</th>
        <th>Quoted Date</th>
        <th>Validity Date</th>
        <th>Quoted Amount</th>
        <th>Quoted Quantity</th>
        <th>Product ID</th>
        <th>Product Name</th>
        <th>Customer ID</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Contact Number</th>
        <th>Edit Actions</th>
      </tr>
      {{#each quotation}}
    </thead>
    <tbody>
      <tr>
        <td>{{quote_id}}</td>
        <td>{{quoted_date}}</td>
        <td>{{validity_date}}</td>
        <td>{{quoted_amount}}</td>
        <td>{{quoted_quantity}}</td>
        <td>{{product_id}}</td>
        <td>{{product_name}}</td>
        <td>{{customer_id}}</td>
        <td>{{first_name}}</td>
        <td>{{last_name}}</td>
        <td>{{email}}</td>
        <td>{{contact_number}}</td>
        <td>
          <a href="/quotation/{{customer_id}}/edit" class="btn btn-primary btn-sm">Edit</a>
          <a href="/quotation/{{customer_id}}/delete" class="btn btn-danger btn-sm">Delete</a>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>

