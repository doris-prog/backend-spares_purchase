  {{#block "content"}}

  {{!-- Customer information with company details --}}
  <div style="display: flex; align-items: center; justify-content: left;">
    <h1 style="margin-right: 10px;">Customers Detailed Information</h1>
    <a href="/customer/create" class="btn btn-primary btn-sm">Create New Customer</a>
  </div>
  <table class="table">
    <thead>
      <tr>
        <th>Customer ID</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Contact Number</th>
        <th>Email</th>
        <th>Company ID</th>
        <th>Company Name</th>
        <th>Office Number</th>
        <th>Edit Actions</th>
      </tr>
      {{#each customer}}
    </thead>
    <tbody>
      <tr>
        <td>{{customer_id}}</td>
        <td>{{first_name}}</td>
        <td>{{last_name}}</td>
        <td>{{contact_number}}</td>
        <td>{{email}}</td>
        <td>{{company_id}}</td>
        <td>{{company_name}}</td>
        <td>{{office_number}}</td>
        <td>
          <a href="/customer/{{customer_id}}/edit" class="btn btn-primary btn-sm">Edit</a>
          <a href="/customer/{{customer_id}}/delete" class="btn btn-danger btn-sm">Delete</a>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>

