<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  {{!-- bootstrap CSS --}}
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

  <title>{{#block "title"}} {{/block}}</title>

</head>

<body>
  <div class="container">
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
      <div class="container-fluid">
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/">Full summary details</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/company">Company List</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/customer">Customer List</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/quotation">Quotation List</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/confirmed_orders">Confirmed Orders List</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/orders_list">Orders List</a>
            </li>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/inventory">Products Inventory List</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
  </div>

  {{#block "content"}}

  {{!-- Customer information with company details --}}
  <div style="display: flex; align-items: center; justify-content: left;">
    <h1 style="margin-right: 10px;">Detailed Customers Information</h1>
    <a href="/customer/create" class="btn btn-primary btn-sm">Create New Customer</a>
  </div>
  <table class="table">
    <thead>
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Company Name</th>
        <th>Contact Number</th>
        <th>Office Number</th>
        <th>Company Address</th>
        <th>Postal Code</th>
        <th>Edit Actions</th>
      </tr>
      {{#each customer}}
    </thead>
    <tbody>
      <tr>
        <td>{{first_name}}</td>
        <td>{{last_name}}</td>
        <td>{{email}}</td>
        <td>{{company_name}}</td>
        <td>{{contact_number}}</td>
        <td>{{office_number}}</td>
        <td>{{company_address}}</td>
        <td>{{postal_code}}</td>
        <td>
          <a href="/customer/{{customer_id}}/edit" class="btn btn-primary btn-sm">Edit</a>
          <a href="/customer/{{customer_id}}/delete" class="btn btn-danger btn-sm">Delete</a>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>

  {{!-- Company Details --}}
  <div style="display: flex; align-items: center; justify-content: left;">
    <h1 style="margin-right: 10px;">Detailed Customers Information</h1>
    <a href="/customer/create" class="btn btn-primary btn-sm">Create New Customer</a>
  </div>
  <table class="table">
    <tr>
      <th>Company Name</th>
      <th>Last Name</th>
      <th>Postal Code</th>
      <th>Contact Number</th>
    </tr>
    {{#each company}}
    <tr>
      <td>{{company_name}}</td>
      <td>{{company_address}}</td>
      <td>{{postal_code}}</td>
      <td>{{office_number}}</td>
    </tr>
    {{/each}}
  </table>

  {{/block}}

  <footer>
    Company Management Systems (c) 2024
  </footer>

</body>

</html>