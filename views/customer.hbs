{{#extends "base"}}
{{#block"content"}}
<h1>Customers</h1>
<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Contact Number</th>
        </tr>
        {{#each customer}}
    </thead>
    <tbody>
        <tr>
            <td>{{first_name}}</td>
            <td>{{last_name}}</td>
            <td>{{email}}</td>
            <td>{{contact_number}}</td>
            <td>
                <a href="/customers/{{customer_id}}/edit" class="btn btn-primary btn-sm">Edit</a>
                <a href="/customers/{{customer_id}}/delete" class="btn btn-danger btn-sm">Delete</a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>

{{/block}}

{{/extends}}