{{#extends "base"}}

{{#block "content"}}

<h1>Edit Company</h1>

<form method="POST">
    <div class="mb-3">
        <label>Company Name</label>
        <input type="text" class="form-control" name="company_name" value="{{company.company_name}}">
    </div>
    <div class="mb-3">
        <label>Company Address</label>
        <input type="text" class="form-control" name="company_address" value="{{company.company_address}}">
    </div>
    <div class="mb-3">
        <label>Postal Code</label>
        <input type="text" class="form-control" name="postal_code" value="{{company.postal_code}}">
    </div>
        <div class="mb-3">
        <label>Office Number</label>
        <input type="text" class="form-control" name="office_number" value="{{company.office_number}}">
    </div>
    <button type="submit" class="btn btn-primary">Update Company</button>
</form>

{{/block}}

{{/extends}}
