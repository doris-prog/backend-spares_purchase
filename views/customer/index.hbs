{{#extends "base"}}
{{#block"content"}}
<h1>Customers</h1>
<table class="table">
    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Contact Number</th>
    </tr>
    {{#each customer}}
    <tr>
        <td>{{first_name}}</td>
        <td>{{last_name}}</td>
        <td>{{email}}</td>
        <td>{{contact_number}}</td>
        <td><a href="/customer/{{customer_id}}/edit">Edit</a></td>
    </tr>
    {{/each}}
</table>
{{/block}}
{{/extends}}