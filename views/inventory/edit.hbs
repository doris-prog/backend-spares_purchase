{{#extends "base"}}

{{#block "content"}}

<h1>Edit Product</h1>

<form method="POST">
    <div class="mb-3">
        <label>Product ID</label>
        <input type="text" class="form-control" name="quoted_date" value="{{inventory.product_id}}">
    </div>
    <div class="mb-3">
        <label>Product Name</label>
        <input type="text" class="form-control" name="validity_date" value="{{inventory.product_name}}">
    </div>
    <div class="mb-3">
        <label>In Stock</label>
        <input type="text" class="form-control" name="email" value="{{inventory.instock}}">
    </div>
    <div class="mb-3">
        <label>Product Weight</label>
        <input type="text" class="form-control" name="contact_number" value="{{inventory.product_weight}}">
    </div>
    <div class="mb-3">
        <label>Product Size</label>
        <input type="text" class="form-control" name="contact_number" value="{{inventory.product_size}}">
    </div>
    <button type="submit" class="btn btn-primary">Update Product</button>
</form>

{{/block}}

{{/extends}}
